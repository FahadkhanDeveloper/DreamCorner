<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }
  @media (max-width: 925px) and (min-width: 768px) {
    .offcanvas-body {
      padding: 0.25rem;
    }
    .navbar-nav .nav-link {
      padding: 0.1rem 0.25rem;
      font-size: 0.85rem;
    }
    .search-inp {
      padding: 0.15rem 0.75rem;
      font-size: 0.85rem;
    }
    .search-btn {
      padding: 0 0.3rem;
      font-size: 0.85rem;
    }
    .offcanvas-header h5 {
      font-size: 0.85rem;
      margin-bottom: 0.25rem;
    }
    .navbar-nav {
      margin-bottom: 0.25rem;
    }
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-solid fa-hiking"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasNavbar"
      aria-controls="offcanvasNavbar"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div
      class="offcanvas offcanvas-end"
      tabindex="-1"
      id="offcanvasNavbar"
      aria-labelledby="offcanvasNavbarLabel"
      style="width: 20rem; height: 25rem; margin: 2rem; border-radius: 0.5rem"
    >
      <div class="offcanvas-header ms-2">
        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">DreamCorner</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>

      <div class="offcanvas-body ms-2">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <div class="navbar-nav ms-auto mt-md-0 mt-3">
          <form class="d-flex" role="search" method="GET" action="/listings">
            <input
              class="form-control me-2 search-inp"
              type="text"
              placeholder="Search destinations"
              name="country"
            />
            <button class="btn search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>Search
            </button>
          </form>
        </div>

        <div class="navbar-nav ms-auto mt-md-0 mt-3">
          <a class="nav-link" href="/listings/new">DreamCo your home</a>
          <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } %> <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>
